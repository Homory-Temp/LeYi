@using Platform.JHMobile.Models
@using System.Xml.Linq;

@model f____Mobile_List_TaskDoneSingle_Result

@{
    ViewBag.Title = "已办工作详情";
}

<link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/sb-admin-2/css/sb-admin-2.css" rel="stylesheet" />
<script src="~/Content/sb-admin-2/js/sb-admin-2.js"></script>

<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <div class="btn btn-warning" type="button" onclick="home();">
                <i class="fa fa-home fa-lg"></i>
            </div>
            <div class="btn btn-warning" type="button" onclick="back();">
                <i class="fa fa-reply fa-lg"></i>
            </div>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-md-12"><strong>ID：</strong></div>
        <div class="col-md-12">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Model.App_ID</div>
        <div class="col-md-12"><strong>流程标题：</strong></div>
        <div class="col-md-12">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Model.AppO_Title</div>
    </div>
    @{
        var path = Server.MapPath(string.Format("~/Views/Task/Config/{0}.xml", Model.Form_ID));
        if (File.Exists(path))
        {
            <div class="row">
                @{
                    var doc = XDocument.Load(path);
                    var fields = doc.Root.Element("fields").Elements("field");
                    foreach (var field in fields)
                    {
                        if (field.Element("visible").Value == "是")
                        {
                            <div class="col-md-12"><strong>@field.Element("displaylabel").Value：</strong></div>
                            <div class="col-md-12">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;1</div>
                        }
                    }
                }
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12 text-center">
                    请配置表单数据集
                </div>
            </div>
        }
    }
</div>

<script>
    function back() {
        window.location = corp_url + 'Task/TaskDone';
    }

    function home() {
        window.location = corp_url + 'Ding/Home';
    }
</script>
