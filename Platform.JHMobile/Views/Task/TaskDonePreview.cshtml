@using Platform.JHMobile.Models

@model TaskDoneObject

@{
    ViewBag.Title = "已办工作详情";
}

<link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/sb-admin-2/css/sb-admin-2.css" rel="stylesheet" />
<script src="~/Content/sb-admin-2/js/sb-admin-2.js"></script>

<div class="container">
    <div class="the-box toolbar no-border no-margin">
        <div class="row">
            <div class="col-xs-6">
                <div class="btn btn-warning" type="button" onclick="home();">
                    <i class="fa fa-home fa-lg"></i>
                </div>
                <div class="btn btn-warning" type="button" onclick="back();">
                    <i class="fa fa-reply fa-lg"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-md-12"><strong>标题：</strong></div>
        <div class="col-md-12">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Model.Object.AppO_Title</div>
    </div>
    <div class="row">&nbsp;</div>
    @{
        if (ViewBag.XType == "Form")
        {
            <div class="row">
                <div class="col-md-12"><strong>内容：</strong></div>
                @{
                    if (Model.Form != null)
                    {
                <div class="col-md-12 table-responsive">
                    @{
                                foreach (var item in Model.Form)
                                {
                    <table class="table table-striped" table-hover>
                        @{
                                            foreach (var field in Model.Config)
                                            {
                                                if (field.Visible)
                                                {
                                <tr>
                                    <td>
                                        <strong>@field.DisplayName</strong>
                                    </td>
                                    <td>@item.GetType().GetProperty(@field.Name).GetValue(item)</td>
                                </tr>
                                                }
                                            }
                        }
                    </table>
                                            }
                    }
                </div>
                            }
                            else
                            {
                <div class="col-md-12 text-center">
                    未配置表单数据集
                </div>
                            }
                }
            </div>
                            }
    }
    @{
        if (ViewBag.XType == "Message")
        {
            <div class="row">
                <div class="col-md-12"><strong>正文：</strong></div>
                <div class="col-md-12">
                    @Html.Raw(ViewBag.Html)
                    @{
                    if (!string.IsNullOrEmpty(ViewBag.PDF))
                    {
                    <input id="pdfPath" type="hidden" value="@string.Format("../../{0}", ViewBag.PDF.Replace(DingTalk.CorpJinHer, "").Replace("\\", "/"))" />
                    <iframe id="viewer" style="width: 100%; height: 389px;" src="~/PDFViewer/web/viewer.html"></iframe>
                    }
                    }
                </div>
                @{
                    if (!string.IsNullOrEmpty(ViewBag.PDF))
                    {
                <div class="col-md-12">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a target="_blank" href="@string.Format("../../{0}", ViewBag.PDF.Replace(DingTalk.CorpJinHer, "").Replace("\\", "/"))">正文下载</a>
                </div>
                    }
                }
            </div>
                    }
    }
    @{
        if (ViewBag.XType == "Ask" || ViewBag.XType == "Accept" || ViewBag.XType == "Send")
        {
            <div class="row">
                <div class="col-md-12"><strong>正文：</strong></div>
                <div class="col-md-12">
                    @Html.Raw(ViewBag.Html)
                    @{
                        if (!string.IsNullOrEmpty(ViewBag.PDF))
                        {
                            <input id="pdfPath" type="hidden" value="@string.Format("../../{0}", ViewBag.PDF.Replace(DingTalk.CorpJinHer, "").Replace("\\", "/"))" />
                            <iframe id="viewer" style="width: 100%; height: 389px;" src="~/PDFViewer/web/viewer.html"></iframe>
                        }
                    }
                </div>
                @{
                    if (!string.IsNullOrEmpty(ViewBag.PDF))
                    {
                        <div class="col-md-12">
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <a target="_blank" href="@string.Format("../../{0}", ViewBag.PDF.Replace(DingTalk.CorpJinHer, "").Replace("\\", "/"))">正文下载</a>
                        </div>
                    }
                }
            </div>
        }
    }
    <div class="row">&nbsp;</div>
    <div class="row">
        @{
            <div class="col-md-12"><strong>流程：</strong></div>
            <div class="col-md-12 table-responsive">
                <table class="table table-striped table-hover">
                    @{
                        var index = 0;
                        foreach (var flow in Model.Flow)
                        {
                            index++;
                            <tr>
                                <td>
                                    <div>&nbsp;&nbsp;<strong>@(index)</strong>、<strong>@(flow.AppDA_ButtonValue)</strong></div>
                                </td>
                                <td>
                                    <div>&nbsp;&nbsp;<strong>@(flow.UserName)</strong> @(index == 1 ? "发起" : "办理")于 <strong>@flow.App_Time.Value.ToString("yyyy-MM-dd HH:mm:ss")</strong></div>
                                    <div>&nbsp;&nbsp;<strong>意见</strong>：@(string.IsNullOrEmpty(flow.AppI_Content) ? "无" : flow.AppI_Content)</div>
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
        }
    </div>
    <div class="row">&nbsp;</div>
    <div class="the-box toolbar no-border no-margin">
        <div class="row">
            <div class="col-xs-6">
                <div class="btn btn-warning" type="button" onclick="home();">
                    <i class="fa fa-home fa-lg"></i>
                </div>
                <div class="btn btn-warning" type="button" onclick="back();">
                    <i class="fa fa-reply fa-lg"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function back() {
        window.location = corp_url + 'Task/TaskDone';
    }

    function home() {
        window.location = corp_url + 'Ding/Home';
    }
</script>
