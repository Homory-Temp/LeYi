@using Platform.JHMobile.Models

@model List<MessageModuleObject>

@{
    ViewBag.Title = "信息门户";
}

<link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/sb-admin-2/css/sb-admin-2.css" rel="stylesheet" />
<script src="~/Content/sb-admin-2/js/sb-admin-2.js"></script>

<div class="container">
    <h1 class="page-heading">信息门户</h1>
    <div class="the-box toolbar no-border no-margin">
        <div class="row">
            <div class="col-xs-6">
                <div class="btn btn-warning" type="button" onclick="back();">
                    <i class="fa fa-home fa-lg"></i>
                </div>
                <div class="btn btn-warning" type="button" onclick="back();">
                    <i class="fa fa-reply fa-lg"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        @foreach (var mo in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="panel metro_2" onclick="@("window.location = corp_url + 'Message/MessageModuleSingle/" + mo.ModuleTypeId + "';")">
                    <div class="panel-heading" style="color:#fff;font-size:20px;line-height:26px">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-envelope fa-4x"></i>
                            </div>
                            <div class="col-xs-9 text-center">
                                <div><h4>@mo.ModuleTypeName</h4></div>
                                <div><h4>@mo.MessageCount</h4></div>
                            </div>
                        </div>
                    </div>
                    <a>
                        <div class="panel-footer">
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
    <div class="row">&nbsp;</div>
    <div class="the-box toolbar no-border no-margin">
        <div class="row">
            <div class="col-xs-6">
                <div class="btn btn-warning" type="button" onclick="back();">
                    <i class="fa fa-home fa-lg"></i>
                </div>
                <div class="btn btn-warning" type="button" onclick="back();">
                    <i class="fa fa-reply fa-lg"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function back() {
        window.location = corp_url + 'Ding/Home';
    }
</script>
