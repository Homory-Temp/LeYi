@using Platform.JHMobile.Models

@model List<MessageModuleObject>

@{
    ViewBag.Title = "信息门户";
}

<link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/sb-admin-2/css/sb-admin-2.css" rel="stylesheet" />
<script src="~/Content/sb-admin-2/js/sb-admin-2.js"></script>

<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <div class="btn btn-warning" type="button" onclick="back();">
                <i class="fa fa-home fa-lg"></i>
            </div>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        @foreach (var mo in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-primary" onclick="@(mo.MessageCount == 0 ? "" : "window.location = corp_url + 'Home/MessageModule/" + mo.ModuleTypeId + "';")">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-envelope fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">@mo.MessageCount</div>
                                <div>@mo.ModuleTypeName</div>
                            </div>
                        </div>
                    </div>
                    <a>
                        <div class="panel-footer">
                            <span class="pull-left"></span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function back() {
        window.location = corp_url + 'Ding/Home';
    }
</script>
