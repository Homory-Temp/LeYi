@using Platform.JHMobile.Models
@model List<信息门户对象简略>
@{
    foreach (var obj in Model)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="panel metro_2" onclick="top.location = '@Url.Action("信息门户列表内容", "信息门户", new { id = obj.MessageID })';">
                    <div class="panel-heading" style="color:#fff;">
                        <i class="fa fa-envelope"></i><span>&nbsp;&nbsp;&nbsp;&nbsp;</span><span>@Html.Raw(obj.MessageTitle)</span>
                    </div>
                    <div style="clear: both;"></div>
                    <div class="panel-footer" style="margin-top: 6px;">
                        <div class="row">
                            <div class="col-xs-8 text-left">
                                <div>@obj.SendTime.Value.ToString("yyyy-MM-dd HH:mm:ss")</div>
                            </div>
                            <div class="col-xs-4 text-right">
                                <div>@obj.UserName</div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    }
}
<div class="row">
    <div class="col-md-12 text-center">
        -&nbsp;&nbsp;&nbsp;&nbsp;第&nbsp;@(ViewBag.Current)&nbsp;页&nbsp;&nbsp;&nbsp;&nbsp;-
    </div>
</div>
<div class="row">&nbsp;</div>
